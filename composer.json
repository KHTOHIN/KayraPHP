{
  "name": "kayraphp/framework",
  "description": "KayraPHP - Performance-first PHP Framework",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.4",
    "monolog/monolog": "^3.0",
    "symfony/console": "^7.0",
    "nikic/fast-route": "^1.3.0",
    "guzzlehttp/guzzle": "^7.0"
  },
  "suggest": {
    "ext-swoole": "*",
    "ext-pdo": "*",
    "ext-redis": "*",
    "ext-sockets": "*"
  },
  "autoload": {
    "psr-4": {
      "Kayra\\": "core/",
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "bin": [
    "bin/kayra"
  ],
  "require-dev": {
    "phpunit/phpunit": "^11.0"
  },
  "scripts": {
    "post-autoload-dump": [
      "Kayra\\Console\\Kernel::compileContainer"
    ]
  }
}